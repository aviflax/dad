#!/usr/bin/env bash
# shellcheck disable=SC2016

set -eux

if [ -z "$NATIVE_IMAGE" ]; then
    echo 'Please set $NATIVE_IMAGE'
    exit 1
fi

rm -Rf classes
mkdir classes

clojure -A:native-image -e "(compile 'dad.cli)"

$NATIVE_IMAGE \
    -cp "$(clojure -A:native-image -Spath):classes" \
    -H:Name=dad \
    -H:+ReportExceptionStackTraces \
    --initialize-at-build-time  \
    --verbose \
    --no-fallback \
    --no-server \
    "-J-Xms10g" \
    "-J-Xmx10g" \
    dad.cli
