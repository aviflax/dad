#!/usr/bin/env bash

set -eu

if [ -z "$NATIVE_IMAGE" ]; then
    echo 'Please set $NATIVE_IMAGE'
    exit 1
fi

clojure -e "(compile 'dad.cli)"

$NATIVE_IMAGE \
    -cp $(clojure -Spath):classes \
    -H:Name=dad \
    -H:+ReportExceptionStackTraces \
    --initialize-at-build-time  \
    --verbose \
    --no-fallback \
    --no-server \
    "-J-Xmx3g" \
    dad.cli
